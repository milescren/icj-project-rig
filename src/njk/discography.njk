{% extends '_templates/base.njk' %}

{% block page_title %}Discography{% endblock %}

{% block page_description %}Learn about Queen's discography.{% endblock %}

{% block content %}
<div class="container discography-page">
<p class="discography-header text-center">DISCOGRAPHY</p>
<div class="row">
  {% for discography in queen.discography %}
  <div class="col-sm-6 col-md-4 col-lg-3">
    <!-- any way to center the final row so it doesn't look so weird? -->
    <div class="card mb-3">
      <img src="img/discs/{{discography.image}}" alt="{{ discography.title }} album cover" class="card-img-top">
      <div class="card-body">
        <p class="card-title text-center">{{ discography.title }}</p>
        <p class="card-text text-center">{{ discography.year }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

{% endblock %}
