{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}Learn about {{ name }}: {{ instruments }} of Queen.{% endblock %}

{% block content %}
  <article class="container member-page">
    <div class="row">
      <div class="member-image col-sm-12 col-md-12 col-lg-6">
        <!-- need to change the OG size of these images... too big on all platforms right now -->
        <img src="../img/members/{{ slug }}-bw.jpg" alt="{{ name }}" class="img-fluid">
      </div>
      <div class="member-description col-sm-12 col-md-12 col-lg-6">
        <div class="text-center">
        <!-- need to write classes, etc. for styles on repeated classifications -->
        <h1 class="baked-member-name">{{ name }}</h1>
        <p class="instruments-members" style="font-style:italic">{{ instruments }}</p>
        <p>Tenure: {{ tenure }}</p>
        <p>Birthplace: {{ birthplace }}</p>
        <p>Birthdate: {{ birthdate }}</p>
        </div>
        <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}
